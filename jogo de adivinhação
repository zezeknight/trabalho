import random

print ("adivinhe o nÃºmero")
print ("vamos comeÃ§ar")

#randint Ã© uma funÃ§Ã£o para definir um numero aleatorio
numero_secreto = random.randint (1,50)

tentativas = 0

#while true serva como executar o codigo python de forma indefinida
while True:
    palpite= int(input("de um palpite:"))
    tentativas += 1
    
    if palpite == numero_secreto:
        print(f"parabens, vocÃª acertou {tentativas} tentativas, parabens")
        break
    
    elif palpite < numero_secreto:
        print("tente um numero maior")
    else:
        print("tente um numero menor")
    
